# ===== CONFIGURAÇÕES GERAIS =====
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=seu_secret_key_super_seguro_aqui_com_mais_de_50_caracteres
ENVIRONMENT=production

# ===== BANCO DE DADOS =====
DATABASE_URL=postgresql://agrotech:senha_super_segura_db@db:5432/agrotech_prod
DB_PASSWORD=senha_super_segura_db
POSTGRES_DB=agrotech_prod
POSTGRES_USER=agrotech
POSTGRES_PASSWORD=senha_super_segura_db

# ===== REDIS =====
REDIS_URL=redis://redis:6379/0

# ===== APIs EXTERNAS =====
OPENAI_API_KEY=sua_openai_api_key_aqui
IPMA_API_KEY=sua_ipma_api_key_aqui
OPENWEATHERMAP_API_KEY=sua_openweather_api_key_aqui

# ===== CONFIGURAÇÕES DE EMAIL =====
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=contato@agrotech.pt
SMTP_PASSWORD=senha_email_app_specific
MAIL_FROM=contato@agrotech.pt
MAIL_ADMIN=admin@agrotech.pt

# ===== CONFIGURAÇÕES DE SEGURANÇA =====
JWT_SECRET_KEY=jwt_secret_key_muito_seguro_aqui
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Strict
PERMANENT_SESSION_LIFETIME=86400

# ===== MONITORAMENTO =====
GRAFANA_PASSWORD=senha_grafana_admin
PROMETHEUS_RETENTION=30d

# ===== NOTIFICAÇÕES =====
WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/webhook/url

# ===== CONFIGURAÇÕES DE UPLOAD =====
MAX_CONTENT_LENGTH=10485760
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx

# ===== CONFIGURAÇÕES DE CACHE =====
CACHE_TYPE=redis
CACHE_REDIS_URL=redis://redis:6379/1
CACHE_DEFAULT_TIMEOUT=300

# ===== CONFIGURAÇÕES DE LOGGING =====
LOG_LEVEL=INFO
LOG_FILE=logs/agrotech.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# ===== CONFIGURAÇÕES DE RATE LIMITING =====
RATELIMIT_STORAGE_URL=redis://redis:6379/2
RATELIMIT_DEFAULT=100 per hour
RATELIMIT_API=1000 per hour

# ===== CONFIGURAÇÕES SSL =====
SSL_CERT_PATH=/etc/nginx/ssl/agrotech.pt.crt
SSL_KEY_PATH=/etc/nginx/ssl/agrotech.pt.key

# ===== CONFIGURAÇÕES DE BACKUP =====
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE=local
S3_BUCKET=agrotech-backups
AWS_ACCESS_KEY_ID=sua_aws_access_key
AWS_SECRET_ACCESS_KEY=sua_aws_secret_key
AWS_REGION=eu-west-1

# ===== CONFIGURAÇÕES DE DOMÍNIO =====
DOMAIN=agrotech.pt
ALLOWED_HOSTS=agrotech.pt,www.agrotech.pt,localhost,127.0.0.1

# ===== CONFIGURAÇÕES DE ANALYTICS =====
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X
